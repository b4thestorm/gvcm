<!DOCTYPE html>
<html>
<head>
  <title>Gvcm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <style type="text/css">
    .flash-message {
      margin-top: 50px;  
    }

    .facebook {
      position: absolute;
      top: 50%;
    }
  </style>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%=link_to 'GoodVibesCreativeMinds', root_path , class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%=link_to image_tag('icon-facebook.svg', size: '30x30' ), 'https://www.facebook.com/goodvibescreativeminds/?fref=ts', class: 'facebook'%></li>
        <li><%=link_to 'Performances', watch_index_path%></li>
        <li><%=link_to 'About'%></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<% if content_for? :menu%>
  <nav class="navbar">
   <%= yield :menu%>
  </nav>
<%end%>

<%flash.each do |type, message| %>
  <% binding.pry %>
  <div class="alert alert-<%= type %> fade in flash-message">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= message %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
